<UserControl x:Class="DatenMeister.WPF.Controls.EntityTableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel x:Name="areaToolbar" Orientation="Horizontal">
            <Button x:Name="buttonNew" Click="buttonNew_Click">New...</Button>
            <Button x:Name="buttonEdit" Click="buttonEdit_Click">Edit...</Button>
            <Button x:Name="buttonDelete" Click="buttonDelete_Click">Delete</Button>
        </StackPanel>
        <DataGrid x:Name="gridContent" Grid.Row="1">

        </DataGrid>
    </Grid>
</UserControl>
